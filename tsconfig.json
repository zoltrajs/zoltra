{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "composite": true,
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "rootDir": "src",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "cli"],
  "exclude": ["node_modules", "dist"]
}
